# Database
DATABASE_URL=postgresql://kalshi_edge:kalshi_edge_password@localhost:5432/kalshi_edge

# Kalshi API (fill in your own credentials and PEM path)
KALSHI_ENV=demo
KALSHI_API_KEY_ID=your_key_id_here
KALSHI_API_KEY_SECRET=/path/to/kalshi_private_key.pem

# Execution / risk
EXECUTION_MODE=simulate
MAX_RISK_PER_TRADE_USD=10
MAX_RISK_PER_MARKET_USD=50
MAX_RISK_TOTAL_USD=200
INITIAL_BANKROLL_USD=1000.0
# Fraction of bankroll to risk per trade (default 1.5%)
MAX_RISK_FRACTION_PER_TRADE=0.015
